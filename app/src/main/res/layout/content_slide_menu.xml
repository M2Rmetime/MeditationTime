<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_slide_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.meditation.metime.SlideMenu"
    tools:showIn="@layout/activity_slide_menu">

    <ImageButton
        android:id="@+id/hamburger"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/ic_dehaze_black_24dp" />

    <Button
        android:id="@+id/Journey_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/hamburger"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp"
        android:background="#FFF8E1"
        android:drawableLeft="@drawable/ic_menu_manage"
        android:paddingLeft="30dp"
        android:text="@string/Journey_btn" />

    <Button
        android:id="@+id/Mood_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/Journey_btn"
        android:layout_alignStart="@+id/Journey_btn"
        android:layout_below="@+id/Journey_btn"
        android:layout_marginTop="16dp"
        android:background="#FFF8E1"
        android:drawableLeft="@drawable/ic_menu_manage"
        android:paddingLeft="30dp"
        android:text="@string/Mood.btn" />

    <Button
        android:id="@+id/Bala_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/Mood_btn"
        android:layout_alignStart="@+id/Mood_btn"
        android:layout_below="@+id/Mood_btn"
        android:layout_marginTop="16dp"
        android:background="#FFF8E1"
        android:drawableLeft="@drawable/ic_menu_manage"
        android:paddingLeft="30dp"
        android:text="@string/bala_btn" />

    <ImageButton
        android:id="@+id/information"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_info_outline_black_24dp"
        android:layout_marginEnd="9dp"
        android:layout_alignTop="@+id/hamburger"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
