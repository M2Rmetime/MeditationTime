<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <include android:id="@+id/streak"
            layout="@layout/button_progress_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Current Streak"
            android:textAlignment="center"
            android:textColor="@color/txt_progress"
            android:textSize="@dimen/slide_desc"/>

        <include android:id="@+id/totalSessions"
            layout="@layout/button_progress_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Total Number of Sessions"
            android:textAlignment="center"
            android:textColor="@color/txt_progress"
            android:textSize="@dimen/slide_desc"/>

        <include android:id="@+id/avgDuration"
            layout="@layout/button_progress_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Average Duration"
            android:textAlignment="center"
            android:textColor="@color/txt_progress"
            android:textSize="@dimen/slide_desc"/>

    </LinearLayout>
</RelativeLayout>